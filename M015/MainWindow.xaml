<Window x:Class="M015.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ein Fenster"
		Height="450" Width="300"
		WindowStartupLocation="CenterScreen">
	<StackPanel Margin="10">
		<Menu>
			<MenuItem Header="Datei">
				<MenuItem Header="Item1"/>
				<MenuItem Header="Item2"/>
				<MenuItem Header="Item3">
					<MenuItem Header="Beenden" Click="MenuItem_Click"/>
				</MenuItem>
			</MenuItem>
		</Menu>
		<Button Content="B1" Click="Button_Click"/>
		<TextBlock Background="AliceBlue" Name="TB" TextAlignment="Center"/>
		<ComboBox Name="Combo" SelectionChanged="Combo_SelectionChanged"/>
		<ListBox Name="LB" SelectionMode="Extended" SelectionChanged="LB_SelectionChanged"/>
		<CheckBox IsChecked="True" Content="Eine CheckBox" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
		<RadioButton Name="RB1" GroupName="R1" IsChecked="True"/>
		<RadioButton Name="RB2" GroupName="R1"/>
		<RadioButton Name="RB3" GroupName="R1"/>
		<RadioButton Name="RB4" GroupName="R2" IsChecked="True"/>
		<RadioButton Name="RB5" GroupName="R2"/>
	</StackPanel>
</Window>
